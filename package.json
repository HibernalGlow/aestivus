{
  "name": "aestivus",
  "version": "3.1.0",
  "description": "Python工具链可视化编排与执行平台 - Tauri 版本",
  "type": "module",
  "scripts": {
    "install-reqs": "yarn install && pip install -e ./src-python",
    "dev": "vite dev --port 1096",
    "dev:tauri": "vite dev --port 1096",
    "uvi": "concurrently \"cd src-python && uvicorn main:app --host 127.0.0.1 --port 8009 --reload\" \"vite dev --port 1096\"",
    "dev:standalone": "concurrently \"cd src-python && uvicorn main:app --host 127.0.0.1 --port 8009 --reload\" \"vite dev --port 1096\"",
    "dev:api": "cd src-python && uvicorn main:app --host 127.0.0.1 --port 8009 --reload",
    "dev:python": "cd src-python && python -m aestiv --standalone",
    "web:dev": "vite dev --port 1096 --host 0.0.0.0",
    "build": "vite build",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "export": "vite build",
    "start": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "svelte-check --tsconfig ./tsconfig.json"
  },
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/store": "^0.8.0",
    "@tanstack/table-core": "^8.21.3",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@xyflow/svelte": "^1.5.0",
    "ansi-to-html": "^0.7.2",
    "gridstack": "^12.4.1",
    "svelte-dnd-action": "^0.9.68",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@internationalized/date": "^3.10.0",
    "@lucide/svelte": "^0.561.0",
    "@sveltejs/adapter-static": "^3.0.6",
    "@sveltejs/kit": "^2.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tauri-apps/cli": "^2.0.0",
    "@types/node": "^24.0.15",
    "bits-ui": "^2.14.4",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.2.2",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  },
  "author": "HibernalGlow"
}
